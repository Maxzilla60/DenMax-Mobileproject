<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.pxl.denmax.poopchasers.View.ToiletDetail.ToiletDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlue"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/toiletNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/locationNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="@color/colorLightBlue"
                android:textSize="17dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/starLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true">


                    <ImageView
                        android:id="@+id/star1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:maxHeight="20dp"
                        android:maxWidth="20dp"
                        android:src="@drawable/starfull" />

                    <ImageView
                        android:id="@+id/star2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/starfull" />

                    <ImageView
                        android:id="@+id/star3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/starfull" />

                    <ImageView
                        android:id="@+id/star4"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/starfull" />

                    <ImageView
                        android:id="@+id/star5"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/starfull" />

                </LinearLayout>

                <Button
                    android:id="@+id/directionsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/colorPrimary"
                    android:padding="5dp"
                    android:text="Get directions"
                    android:textColor="@color/colorWhite" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/iconLayout"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/manImageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/man" />

                <ImageView
                    android:id="@+id/womanImageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/woman" />

                <ImageView
                    android:id="@+id/unisexImageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/unisex" />

                <ImageView
                    android:id="@+id/babyImageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/baby" />

                <ImageView
                    android:id="@+id/wheelchairImageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/wheelchair" />

                <ImageView
                    android:id="@+id/freeImageView"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/free" />

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/comments"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="60dp" />
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/addCommentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="+"
        android:textColor="@android:color/white"
        android:textSize="25dp" />

</RelativeLayout>
